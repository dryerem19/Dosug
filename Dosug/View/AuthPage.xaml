<Page x:Class="Dosug.View.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dosug.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" Background="White">

    <UniformGrid Rows="3"
                 Columns="2"
                 Margin="20">
        <Label Content="Логин:"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" />
        <TextBox Name="LoginField"
                 VerticalAlignment="Center"/>
        <Label Content="Пароль:"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" />
        <PasswordBox Name="PasswordField"
                     VerticalAlignment="Center"
                     PasswordChanged="OnPasswordChanged" />
        <Button Content="Войти" 
                Margin="20"
                Click="OnLoginBtnClick" />
        <Button Content="Войти как гость"
                Margin="20"
                Click="OnGuestLoginBtnClick" />
    </UniformGrid>
</Page>
